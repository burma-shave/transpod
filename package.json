{
  "name": "transpod",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "build": "npx xslt3 -t -nogo -export:podcast-transform.sef.json -xsl:podcast-transform.xsl",
    "prebuild": "echo 'Compiling XSLT stylesheet...'",
    "postbuild": "echo 'XSLT compilation complete!'",
    "test": "npm run build && jest",
    "test:watch": "jest --watch",
    "test:coverage": "npm run build && jest --coverage",
    "prestart": "npm run build"
  },
  "dependencies": {
    "express": "^5.1.0",
    "saxon-js": "^2.7.0"
  },
  "devDependencies": {
    "jest": "^30.0.5",
    "supertest": "^7.1.4",
    "xslt3": "^2.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!tests/**",
      "!node_modules/**"
    ]
  }
}
